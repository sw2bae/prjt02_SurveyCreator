<main class="input-container">
    <header class="input-header">
        <h2>Welcome <span class="member-name"></span></h2>
    </header>

    <section class="inputs">
        <ul>
            {{#each Surveys}}
            <li>
                <p class="survey-title">{{survey_title}}</p>
                <button class="take-Btn" data-surveyID="{{id}}">Take</button>
                <button class="result-Btn" data-surveyID="{{id}}">Results</button>
                <button class="delete-Btn" data-surveyID="{{id}}">Delete</button>
            </li>
            <hr>
            {{/each}}
        </ul>
        <button class="create-Btn">Create Survey</button>
    </section>
</main>
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>