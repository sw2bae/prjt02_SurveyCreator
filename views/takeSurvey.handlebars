<main class="input-container">
    <header class="input-header">
        <h1 id="survey_Id" value={{Surveys.id}}>{{Surveys.survey_title}}</h1>
    </header>
    <section class="inputs">
        <form class="inputs-form">
            <ul>
                {{#each Surveys.Survey_Questions}}
                <li>
                    <p id="question_Id" value={{this.id}}>Question: {{survey_questions}}</p>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="question{{this.id}}" id="true{{this.id}}"
                            value="true">
                        <label class="form-check-label" for="true{{this.id}}">True</label>
                    </div>

                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="question{{this.id}}" id="false{{this.id}}"
                            value="false">
                        <label class="form-check-label" for="false{{this.id}}">False</label>
                    </div>
                </li>
                <hr>
                {{/each}}
            </ul>
            <button type="button" class="takeSurveyBtn">Submit</button>
            <h3>Copy the link below to send this survey to your friends!</h3>
            <p>Survey Link: <span class="survey-Url"></span></p>
        </form>
    </section>
</main>
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>