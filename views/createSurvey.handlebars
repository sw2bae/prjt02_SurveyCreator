<main class="input-container">

    <header class="input-header">
        <h2>Create A Survey!</h2>
        <p class="note">Note: All questions will be formatted as true or false questions.</p>
    </header>

    <section class="inputs">
        <form id="survey" class="inputs-form">
            <div class="form-group">
                <label for="surveyTitle" class="form-prompt">Title:</label>
                <input type="text" class="form-control" id="surveyTitle" placeholder="Survey Title"></textarea>
            </div>
            <div class="form-group">
                <label for="question1" class="form-prompt">Question 1:</label>
                <textarea type="text" class="form-control" id="question1" placeholder="Write your question"></textarea>
            </div>
            <button type="button" class="submitBtn" id="createSurvey-Btn">Submit</button>

        </form>
    </section>
</main>
